<div class="panel" id="inspection-details">
	<div class="panel-body">
		<form class="form-horizontal">
			<div class="row">
				<div class="col-md-5">
					<div class="form-group">
						<label class="col-md-6 control-label">Inventory Date</label>
						<div class="col-md-6 input-group">
							<input type="text" class="form-control disabled" 
									   ng-model="inspection.inspection_date" ng-disabled="inspection_editing" data-date-format="yyyy-mm-dd" bs-datepicker>
							<span class="input-group-btn" data-toggle="datepicker">
								<button class="btn btn-default btn-calendar" type="button" ng-disabled="inspection_editing">
									<span class="glyphicon glyphicon-calendar">
								</button>
							</span>
						</div>
					</div>
					<div class="form-group">
						<label class="col-md-6 control-label">Last Updated</label>
						<div class="col-md-6 input-group">
							<input type="text" class="form-control disabled" 
							       ng-model="inspection.report_date" ng-disabled="inspection_editing" data-date-format="yyyy-mm-dd" bs-datepicker>
							<span class="input-group-btn" data-toggle="datepicker">
								<button class="btn btn-default btn-calendar" type="button" ng-disabled="inspection_editing">
									<span class="glyphicon glyphicon-calendar">
								</button>
							</span>
						</div>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-md-12">
					<button ng-show="inspection_editing" class="btn-edit-toggle btn btn-success btn-sm pull-right" ng-click="inspection_editing = !inspection_editing">Edit</button>
					<button ng-hide="inspection_editing" class="btn-edit-toggle btn btn-success btn-sm pull-right" type="submit" ng-click="inspection_editing = !inspection_editing; editInspection(inspection)">Save</button>
				</div>
			</div>
		</form>
	</div>
</div>